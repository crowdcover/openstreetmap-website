%>

var over_map;
var links_map;
var overlay_control;
var links_overlay_control;
var Story = {
  overlays: {
    <%
    overlays.each do | tile |
      comma = "," unless (tile == overlays.last) %>
    "<%= tile.keyid %>" : new L.Site.<%= tile.keyid.capitalize %>()<%= comma %>
