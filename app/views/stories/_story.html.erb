<div class='diary_post report_post'>
  <div class='post_heading clearfix'>

 <ul class='clearfix secondary-actions ' style="float:right">

    <%= if_user(story.user, :li) do %>
      <%= link_to t('story.story.edit_link'), edit_story_path(:id => story.id), :class => :button %>
    <% end %>
    <%= if_user(story.user, :li) do %>
      <%= link_to t('story.story.delete_link'), story_path(story), :method => :delete, :data => { confirm: t('story.story.confirm_delete') }, :class => :button %>
    <% end %>
    <%= if_user(story.user, :li) do %>
      <%= link_to (story.draft ? "Publish" : "Make Draft"), story_toggle_draft_path(:story_id => story.id), :method => :post, :data => { confirm: t('story.story.confirm_delete') }, :class => :button %>
    <% end %>
  </ul>

    <h2><%= story.title %></h2>
    <h3><%= link_to (story.draft ? "View Draft" : "View published report"), h(story.permalink), target: "_blank" %></h3>
