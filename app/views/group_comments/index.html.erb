<%= stylesheet_link_tag "groups" %>
<%= render :partial =>  'groups/heading' %>

<% content_for :heading do %>
  <h1>Discussions</h1>
  <p>Discussions intro text </p>
  <%= link_to "Start a new discussion", new_group_comment_path %>
<% end %>
<ul class="comment">
  <%= render  @group_comments  %>
</ul>

<%= link_to_if (@page - 1) * @page_size >= @group_comments.size, "older discussions", params.merge(:page => @page - 1 ) %>
|
<%= link_to_if  @page * @page_size <= @group_comments.size, "newer discussions", params.merge(:page => @page + 1) %>
