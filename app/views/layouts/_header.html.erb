<header class="header nav fill-gray strongline-bottom contain caps noprint">
    <div class="row1 clearfix limiter">
        <a class="fl clearfix center" href="rdc.moabi.org/en" style="margin-right:8px;">
            <div class="logo-icon"></div>
            <div class="logo-text beta">Moabi DRC</div>
        </a>

        <a href="#" id="menu-icon"></a>

        <nav class="primary">
            <%= content_for :header %>
            <ul style="margin:4px 0;">
              <li id="edit_tab" class="dropdown disabled <%= current_page_class(edit_path) %>">
                <%=  link_to t('layouts.edit'), '/' , :class => "tab geolink editlink",
                           :id => 'editanchor',
                           :data => { :editor => preferred_editor }
                %><a class='dropdown-toggle' data-toggle='dropdown' href='#' style="padding: 1px 3px"><b class="caret"></b></a>
                <ul class='dropdown-menu'>
                  <% Editors::RECOMMENDED_EDITORS.each do |editor| %>
                    <li>
                      <%= link_to t('layouts.edit_with', :editor => t("editor.#{editor}.description")),
                                  edit_path(:editor => editor),
                                  :data => { :editor => editor },
                                  :class => "geolink editlink" %>
                    </li>
                  <% end %>
                </ul>
              </li>
              <li id="history_tab" class="<%= current_page_class(history_path) %>">
                <%= link_to t('layouts.history'), history_path, :class => 'tab geolink' %>
              </li>
              <!-- <li id="export_tab" class="<%= current_page_class(export_path) %>">
                <%= link_to t('layouts.export'), export_path, :class => 'tab geolink' %>
              </li> -->
            </ul>
        </nav>

        <nav class="secondary">
            <ul>
                <li class="compact-hide fl <%= current_page_class(about_path) %>"><%= link_to 'Reports', 'http://rdc.moabi.org/reports/en' %></li>
                <li class="compact-hide fl <%= current_page_class(about_path) %>"><%= link_to 'Maps', 'http://rdc.moabi.org/data/en' %></li>
                <li id="" class="dropdown fl">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= t 'layouts.more' %> <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                      <li class="<%= current_page_class(about_path) %>"><%= link_to 'About', 'http://rdc.moabi.org/the-initiative/en' %></li>
                      <li class="<%= current_page_class(about_path) %>"><%= link_to 'Blog', 'http://rdc.moabi.org/blog/en' %></li>
                      <li class="<%= current_page_class(about_path) %>"><%= link_to 'Documentation', 'http://rdc.moabi.org/using-moabi/en' %></li>
                    </ul>
                </li>

                <% if @user && @user.id %>
                  <div class='dropdown user-menu logged-in'>
                    <a class='dropdown-toggle' data-toggle='dropdown' href="#">
                      <%= user_thumbnail_tiny(@user, :size => 25, :width => 25, :height => 25)
                      %><%= render :partial => 'layouts/inbox'
                    %><span class="user-button"><span class='username'><%= @user.display_name %></span>
                      <b class="caret"></b></span>
                    </a>
                    <ul class='dropdown-menu'>
                      <li>
                        <%= link_to inbox_path(:display_name => @user.display_name) do %>
                          <span class='count-number'><%= number_with_delimiter(@user.new_messages.size) %></span>
                          <%= t('user.view.my messages') %>
                        <% end %>
                      </li>
                      <li>
                        <%= link_to t('user.view.my profile'), user_path(:display_name => @user.display_name) %>
                      </li>
                      <li>
                        <%= link_to t('user.view.my settings'), :controller => 'user', :action => 'account', :display_name => @user.display_name %>
                      </li>
                      <li class="divider"></li>
                      <li>
                        <%= yield :greeting %>
                      </li>
                      <li>
                        <%= link_to t('layouts.logout'), logout_path(:session => request.session_options[:id], :referer => request.fullpath) %>
                      </li>
                    </ul>
                  </div>
                <% else %>
                  <ul class="user-menu clearfix" style="display:inline-block; margin:4px 12px;">
                    <li><%= link_to t('layouts.log_in'), login_path(:referer => request.fullpath) %></li>
                    <li><%= link_to t('layouts.sign_up'), user_new_path %></li>
                  </ul>
                <% end %>

            </ul>
        </nav>

    </div>
</header>
